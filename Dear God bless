        <source>close</source>
        <target>sma</target>
      </condition>
    </entry-rule>
    <exit-rule>
      <condition>
        <type>crossbelow</type>
        <source>close</source>
        <target>sma</target>
      </condition>
    </exit-rule>
  </strategy>
  <risk-management>
    <stop-loss>50</stop-loss>
    <take-profit>100</take-profit>
  </risk-management>
  <webhook>
